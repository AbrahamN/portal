<div id="oauthconnection">
  <% if @consumer_tokens.empty? %>
    <p>
      You are currently not connected, Click on the logo to enable searching on my experiment
    </p>
  <% else %>
    <p>
      Connected to <%= image_tag "myexperiment.png", :height=>"25"%>
    </p>
    <% @consumer_tokens.each do |token| %>   
      <%= form_tag oauth_consumer_path(token.class.service_name), 
                   :method=>:delete do %>
        <%=submit_tag "Disconnect" %>
        or
        <%=submit_tag "Reconnect" %>
        if you experienced a problem.
      <% end %> 
    <% end %>
  <% end %>

  <% unless @services.empty? %>
    <% @services.each do |service| %>
      <a href=<%= oauth_consumer_path(service)%> class="auth_provider">
        <%= image_tag "myexperiment.png", 
            :height => "25", :alt => "my experiment" %> Connect
      </a>
    <% end %>
  <% end %>
</div>
