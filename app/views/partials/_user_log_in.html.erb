<div class='container'>
  <div id="user_log_in">
    <% if !current_user.nil? %> 
      <%= image_tag "user.png", 
          :alt => "U" %>   
      Logged in as <b><%=current_user.name%></b> |
      <a href='/log_out'>
        <%= image_tag "door_out.png", 
            :alt => "X" %>
        Log Out
      </a>
    <% else %>
      You are currently a Guest user |
      <a href='/log_in'>
        <%= image_tag 'door_in.png', 
            :alt => 'I' %>
        Log In
      </a>
     |
      <a href='/sign_up'>
        <%= image_tag 'book_open.png', 
            :alt => 'R' %>
        Register
      </a>
    <%end%>
  </div>
</div>
