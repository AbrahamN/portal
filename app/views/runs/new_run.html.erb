<% content_for :title, "Taverna Lite - Create Run for " + 
                 @workflow.title + "Workflow"%>
<h2> New Run of <%=h @workflow.title%></h2>
<%= form_for :file_uploads, 
      :url => {:controller => 'runs', :action => 'new_run'}, 
      :html => {:multipart => true}, :disable_with => "Initialising Run" do |f| %>
  <%= hidden_field_tag "workflow_id", @workflow.id %>
  <dl class='list_any'>
    <dt class='list_title'>Run Name:</dt>
    <dd class='list_description'>
      <%= f.text_field 'run_name', :value => @workflow.title, :rows => 1, 
           :onclick => '$(this).select();', :style =>'width:95%' %> 
    </dd>
  <% unless @sources.length()>0%>
    <p>
      Identifier: <%= cookies[:run_identification] %> 
    </p>
  <% else %>
    <h2>
      Input Parameters
    </h2>
    <% @sources.each do |item| %> 
      <% portname = item[0] %>
      <% example_value = @sources[portname].blank? ? "": @sources[portname] -%>  
      <h3><%= label_tag portname %></h3> 
      <dl class='list_any'>
        <dt class='list_title'>Description:</dt>
        <dd class='list_description'>
          <%=@descriptions[portname].blank? ? "Not Provided" : simple_format(@descriptions[portname]) -%>
        </dd>
        <dt class='list_title'>Example Value:</dt>
        <dd class='list_description'>
          <%= render :partial => 'partials/preview_and_detail', 
            :locals => {:content_label => "cit_"+ portname, :content => example_value } %>
        </dd>
        <dt class='list_title'> </dt>
        <dd class='list_description'>
        <b>  
          The example value is automatically entered in the box below. 
          Click to edit it or enter a new value.
        </b> 
        </dd>       
      </dl>
     <dl class='list_any'>
       <dt class='list_title'>Enter Value:</dt>
       <dd class='list_description'>
         <%= f.text_area portname, :value => example_value, :rows => 1, 
           :onclick => '$(this).select();', :style =>'width:95%' %> 
       </dd>
       <dt class='list_title'>Select File:</dt>
       <dd class='list_description'>
         <%= f.file_field  "file_for_#{portname}", :style =>'width:95%'%>
       </dd>           
     </dl>    
    <% end %>
  <% end %>
  <div style="float:right;position:relative;">
    <b> 
      Provide input values and click to execute 
    </b><br/>
    <%= submit_tag 'Start Run' %>          	
  </div>
<% end %>

 

