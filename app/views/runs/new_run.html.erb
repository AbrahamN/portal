<h1>New run</h1>

<%= form_tag(:controller => 'runs', :action => 'new_run') do %>
  <% #error_message_tag %>
  <%= hidden_field_tag "workflow_id", @workflow.id %>
  <p>
    Workflow: <%= @workflow.name %> 
  </p>
  <% unless @sources.length()>0%>
    <p>
      Identifier: <%= cookies[:run_identification] %> 
    </p>
  <% else %>
    <h2>
      Input Values
    </h2>
    <% @sources.each do |item| %> 
    <p>
        <% portname = item[0] %>
        <%= label_tag portname %>
        <%=h text_field_tag portname, @sources[portname] %>
        <%= label_tag @descriptions[portname] %> 
    </p>
    <% end %>
    <p>
      <%= submit_tag 'Start Run' %>
    </p>
  <% end %>

<% end %>


