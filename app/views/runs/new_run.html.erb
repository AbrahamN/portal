<% content_for :title, "Taverna Lite - Create Run for " + 
                 @workflow.title + "Workflow"%>
<h1> Create Run for <%=h @workflow.title%> Workflow</h1>
<br/>
<%= form_for :file_uploads, 
      :url => {:controller => 'runs', :action => 'new_run'}, 
      :html => {:multipart => true} do |f| %>
  <% #error_message_tag %>
  <%= hidden_field_tag "workflow_id", @workflow.id %>


  <% unless @sources.length()>0%>
    <p>
      Identifier: <%= cookies[:run_identification] %> 
    </p>
  <% else %>
    <h1>
      Input Parameters
    </h1>
    <% @sources.each do |item| %> 
    <p>
      <% portname = item[0] %>
      <h3><b><%= label_tag portname %></b></h3> 
      <%= label_tag @descriptions[portname] %> <br/>
      <b>Example Value:</b> <br/> 
      <%= simple_format(@sources[portname]) %>
      Enter Value: <%=h f.text_field portname %> 
      or Select File <%= f.file_field  "file_for_#{portname}" %><br/> 
    </p>
    <% end %>
  <% end %>
  <div style="float:right;position:relative;">
    <b> 
      Provide input values and click to execute 
    </b><br/>
    <%= submit_tag 'Start Run' %>          	
  </div>
<% end %>
<br /><br />
 

