%>
  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% for message in @user.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p>
      <%= f.label :name, "Username" %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </p>      <p>
      <%= f.label :admin %><br />
      <%= f.check_box :admin %>
    </p>
    <p>
      <%= f.label :biovel %><br />
      <%= f.check_box :biovel %>
    </p>
    <p>
      <%= f.label 'User Type' %><br />
      <%= f.select :type_id, [['user',1],['tester',2],['developer',3],['other',4]] %>
    </p>
    <p class="button"><%= f.submit %></p>
  <% end %>


