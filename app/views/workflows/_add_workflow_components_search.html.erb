<%= render :partial => 'oauth_consumers/connection' %>
<% unless @consumer_tokens.empty? %>
<div id="search_components_form">
<table id="families_table">
  <thead>
    <tr>
      <th>Family</th>
      <th>Description</th>
      <th>Registry</th>
      <th>Operations</th>
    </tr>
  </thead>
  <tbody>
  <% @families.each do |family| %>
    <tr>
      <td>
        <%= family.name %></dd>
      </td>
      <td>
        <%=h sanitize(family.description) %></dd>
      </td>
      <td>
        <%= family.registry %>
        <% family.components.each do |comp_name, comp_version| -%>
          </br> <%=comp_name -%> (V <%=comp_version -%>)
        <% end -%>
      </td>
      <td>
        <%if family.used && family.needs_update %>
        <div title="Update Family" alt="Update Family" style="float:left">
          <%= link_to 'Update', {:controller => 'runs' ,
            :action => 'new_run', :id => family.id}, :class => "link_img" %>
        </div>
        <%elsif !family.used %>
        <div title="Download Family" alt="Download Family" style="float:left">
          <%= link_to 'Download', {:controller => 'workflows' ,
              :action => 'download', :id => family.id}, :class => "link_img" %>
        </div>
        <% else %>
          Family up to date
        <% end %>
      </td>
    </tr>
  <% end -%>
  </tbody>
</table>
</div>
<%end%>
