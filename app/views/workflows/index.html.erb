<h1>Listing workflows</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Workflow file</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @workflows.each do |workflow| %>
  <tr>
    <td title="<%= workflow.description %>" alt="<%= workflow.description %>"><%= workflow.title %></td>
    <td><%= workflow.author %></td>
    <td><%= workflow.workflow_file %></td>
    <td><%= link_to 'Show', workflow %></td>
    <td><%= link_to 'Edit', edit_workflow_path(workflow) %></td>
    <td><%= link_to 'Destroy', workflow, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

