<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @workflow.name %>
</p>

<p>
  <b>Title:</b>
  <%= @workflow.title %>
</p>
<p>
  <b>Author(s):</b>
  <%= @workflow.author %>
</p>
<p>
  <b>Description:</b>
  <%= simple_format(@workflow.description) %>
</p>
<p>
  <b>myExperiment ID:</b>
  <%= @workflow.my_experiment_id %>
</p>
<p>
  This workflow has been executed :
  <%= @workflow.run_count %> times and takes <%= @workflow.average_run %> 
  seconds to fininsh on average
</p>
<p>
  <b>Workflow file:</b>
  <%= @workflow.workflow_file %>
</p>

<%= button_to 'Create Run', :controller => 'runs', :action => 'new_run', :id => @workflow %>

<%= link_to 'Edit', edit_workflow_path(@workflow) %> |
<%= link_to 'Back', workflows_path %>
